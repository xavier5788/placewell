	script.
		(function(){
			var i = 0;
			window.setInterval(function(){
				if (!document.hasFocus()) { return; }
				
				var stuff = jzmn(".job:not(:hover)");
				var length = stuff.value.length;
				jzmn(stuff.value[i]).toggleClass("slid");
				i = ( i + 7 ) % length;
			},5000);
		})();
		
